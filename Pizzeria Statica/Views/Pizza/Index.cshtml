@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}
@model List<Pizza>

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  </head>
  <body>
     
    @* MAIN *@
    <main>
        <div class="container mt-4">
            <button type="button" class="btn btn-primary">
                <a class="text-decoration-none text-reset" href="@Url.Action("Create","Pizza")">Crea una pizza</a>
            </button>
        </div>

        <div class="container text-center mt-4">
            <div class="row mt-3 gy-5">
                
                @foreach (Pizza pizza in Model)
                {
                   <div class="col-4">
                      <div class="card" style="width: 18rem;">
                         <div class="card-body">
                                   <h5 class="card-title">@pizza.Nome</h5>
                                   <p class="card-text">@pizza.Descrizione</p>
                                   <p class="card-text">@pizza.Prezzo</p>
                                <button type="button" class="btn btn-primary">
                                    <a class="text-decoration-none text-reset" href="@Url.Action("Details","Pizza", new{id=pizza.Id})">Dettagli</a>
                                </button>
                         </div>
                         <img src="@pizza.Foto" class="card-img-top" alt="...">
                      </div>
                   </div>
                }

            </div>
        </div>
    </main>

                

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>